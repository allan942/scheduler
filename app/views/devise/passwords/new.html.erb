<div id="loginModal" class="modal show" style="position:relative; overflow:auto;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <%= link_to (image_tag "new-csm-logo.png", class: "img-responsive"),  new_user_session_path%>
          <% if notice %>
            <div class="alert alert-info" style="margin-bottom:0" role="alert"><%= notice %></div>
          <% end %>
          <% if alert %>
            <div class="alert alert-danger" style="margin-bottom:0" role="alert"><%= alert %></div>
          <% end %>
      </div>
      <div class="modal-body">

        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class = "form-group">
            <div class="field">
              
              <%= f.email_field :email, placeholder: "Email", autofocus: true, :class => "form-control input-lg" %>
            </div>
          </div>

          <div class = "form-group">
            <div class="actions">
              <%= f.submit "Send me reset password instructions", :class => "btn btn-lg btn-block btn-success", :style => "margin-bottom: 10px" %>
            </div>
          </div>
        <% end %>

        
      </div>
      <div class="modal-footer">
        <div class <div class="col-md-12">
        </div>
      </div>  
    </div>
  </div>
</div>

