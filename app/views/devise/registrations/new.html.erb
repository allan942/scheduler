<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <img src="http://i.imgur.com/CMg4rGP.jpg" style=" display: block;
    margin-left: auto;
    margin-right: auto;">
            <% if notice %>
              <div class="alert alert-info" style="margin-bottom:0" role="alert"><%= notice %></div>
            <% end %>
            <% if alert %>
              <div class="alert alert-danger" style="margin-bottom:0" role="alert"><%= alert %></div>
            <% end %>
        </div>
        <div class="modal-body">
          <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form center-block"}) do |f| %>
            <%= devise_error_messages! %>

            <div class = "form-group">
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, :class => "form-control input-lg" %>
              </div>
            </div>


            <div class = "form-group">
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg" %>
              </div>
            </div>

            <div class = "form-group">
              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-lg" %>
              </div>
            </div>

            <div class = "form-group">
              <div class="actions">
                <%= f.submit "Sign up" %>
              </div>
            </div>
          <% end %>
        </div>

        <%= render "devise/shared/links" %>

        <div class="modal-footer">
           <div class <div class="col-md-12">
            </div>  
        </div>
      </div>
    </div>
  </div>
</div>

