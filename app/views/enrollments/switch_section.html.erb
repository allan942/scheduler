<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#open-sections">Open Sections</a></li>
  <li><a data-toggle="tab" href="#trade-section">Trade</a></li>
  <li><a data-toggle="tab" href="#transactions">Transactions</a></li>
</ul>

<div class="tab-content">
  <div id="open-sections" class="tab-pane fade in active">
  	<!-- open sections section -->
    <h2>Open Sections</h2>
	<ul>
		<% @open_sections.each do |section|%>
			<li><%= section.name %> <%= link_to "Switch", make_switch_path(old_id: @enrollment.section_id, new_id: section.id, enroll_id: @enrollment.id) %></li>
		<% end %>
	</ul>
	<% if @open_sections.length == 0 %>
		<h4>No open sections for this course.</h4>
	<% end %>
  </div>
  <div id="trade-section" class="tab-pane fade">
  	<!-- trade section -->
	<div class = "your-offer">
		<h2>Your offer for section <%= @section.name %>:</h2>
		<% if @offer %>
			<%= link_to "View Offer", offer_path(@offer) %> | <%= link_to "Cancel Offer", delete_offer_path(@enrollment), method: :delete %>
		<% else %>
			<h4>No offer exists. <%= link_to "Create One?", new_offer_path(enroll_id: @enrollment.id)%></h4>
		<% end %>
	</div>
	<h1>OR</h1>
	<div class = "other-offers">
		<h2>See available trading offers:</h2>
		<% @compatable_offers.each do |offer|%>
			<% section = Section.find(offer.section_id) %>
			<%= link_to "Offer for " << section.name, offer_path(offer) %>
		<% end %>
		<% if @compatable_offers.length == 0 %>
			<h5>Sorry. No offers exist that want <%= @section.name %></h5>
		<% end %>
	</div>
  </div>
  <div id="transactions" class="tab-pane fade">
  	<h2>Transactions</h2>
  	<% @transactions.each do |t| %>
  		<div class = "col-sm-4 col-xs-5" style = "border: #eee solid 2px; border-radius: 4px;">
  			<h4>
  				<small><%= t.created_at.strftime("%I:%M:%S %p on %b. %d, %Y") %></small>
  				<br>
  				<%=t.body%>
  			</h4>
  		</div>
  	<% end %>
  	<% if @transactions.length == 0 %>
  		<h4>No transactions.</h4>
  	<% end %>
  </div>
</div>