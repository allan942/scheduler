        <% end %>
        <% while current_height < max_column_height do %>
          <td>
            <div class="spacer"></div>
          </td>
          <% current_height += 1 %>
        <% end %>
      </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <div class = "well" style = "margin-top:70px">
    <h4>Enroll for a course as a mentor or a student to view their sections!</h4>
  </div>
<% end %>