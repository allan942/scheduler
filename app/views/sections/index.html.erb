        <% end %>
        <% while current_height < max_column_height do %>
          <td>
            <div class="spacer"></div>
          </td>
          <% current_height += 1 %>
        <% end %>
      </tr>

      <% current_height = 1 %>
      <tr>
        <td> <h3> Wednesday </h3>  </td>  
        <% course["Wednesday"].each do | section | %>
          <td>
            <%= render partial: "section.html", locals: {section: section} %> 
            <% current_height += 1 %>
          </td>
        <% end %>
        <% while current_height < max_column_height do %>
          <td>
            <div class="spacer"></div>
          </td>
          <% current_height += 1 %>
        <% end %>
      </tr>


      <% current_height = 1 %>     
      <tr>
        <td> <h3> Thursday </h3>  </td>  
        <% course["Thursday"].each do | section | %>
          <td>
            <%= render partial: "section.html", locals: {section: section} %> 
            <% current_height += 1 %>
          </td>
        <% end %>
        <% while current_height < max_column_height do %>
          <td>
            <div class="spacer"></div>
          </td>
          <% current_height += 1 %>
