<% if @courses.size > 0 %>
  <% @sections.keys.each do | key | %>
    <% course = @sections[key] %>
    <h2> <%= key %> </h2>

    <table class="table_sections table">
      <thead>
      </thead>
      <tbody>

      <% max_column_height = [course["Monday"].size, course["Tuesday"].size, course["Wednesday"].size, course["Thursday"].size,course["Friday"].size].max %>
      <% current_height = 1 %>

      <tr>
        <td> <h3> Monday </h3> </td>  
        <% course["Monday"].each do |section| %>
          <td> 
            <%= render partial: "section.html", locals: {section: section} %>
            <% current_height += 1 %>
          </td>
        <% end %>
        <% while current_height < max_column_height do %>
          <td>
            <div class="spacer"></div>
          </td>
          <% current_height += 1 %>
        <% end %>
      </tr>

      <% current_height = 1 %>
      <tr>
        <td> <h3> Tuesday </h3>  </td>  
        <% course["Tuesday"].each do | section | %>   
          <td>
            <%= render partial: "section.html", locals: {section: section} %> 
            <% current_height += 1 %>
