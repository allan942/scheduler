<div class="panel panel-default">
  <div class="panel-heading">Update dashboard notice</div>
  <div class="panel-body">
    <%= form_for @announcement, url: announcement_update_path do |f|%>
    
      <div class="form-group">  
        <%= f.label :announcement %>
        <%= f.cktext_area :info, :class => 'ckeditor' %>
      </div> 
        
      <%= f.submit class: "btn btn-default" %>

    <% end %>
  </div>
</div>